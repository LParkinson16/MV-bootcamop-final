<title>{{project.name}}</title>
 <button class="project-btn"><a href="/">All projects</a></button>
  <h1>{{project.name}}</h1><br>
  <p id="desc">{{project.description}}</p><br>
     
      <form class="add-task-form" action="/projects/{{project.id}}/tasks" method="POST">
    <label>
      Description:
      <input type="text" name="description" required><br>
    </label><br>
    <label>Assigned To:
      <select name="UserId" id="UserId" required>
        {{#each users}}
      <option name="UserId" value={{this.id}}>{{this.name}}</option>
        {{/each}}
      </select>
    </label><br>
    <br><button class="add-btn" type="submit">Add task</button>
  </form>

<div class="app">
  <div class="containers">
    
<div class="container" id="toDoDiv" state="todo">
  <h2>To-Do</h2>
    {{#each columns.todo}}
      <div class="draggable task" draggable="true" taskId="{{this.id}}">
        <p>{{this.description}}</p>
         <p>  <img class="img" src="{{this.User.avatar}}"> {{this.User.name}}</p> 
         <a href="/tasks/{{this.id}}/delete">❌</a> 
         <a href="/tasks/{{this.id}}/edit">Edit</a>
      </div>
    {{/each}}
</div>

<div class="container" state="inProgress">
  <h2>In progress</h2>
    {{#each columns.inProgress}}
      <div class="draggable task" draggable="true" taskId="{{this.id}}">
        <p>{{this.description}}</p>
        <p>  <img class= "img" src="{{this.User.avatar}}"> {{this.User.name}}</p> 
         <a href="/tasks/{{this.id}}/delete">❌</a>
         <a href="/tasks/{{this.id}}/edit">Edit</a> 
      </div>
    {{/each}}
</div>

<div class="container" state="done">
  <h2>Done</h2>
      {{#each columns.done}}
      <div class="draggable task" draggable="true" taskId="{{this.id}}">
        <p>{{this.description}}</p>
        <p>  <img class= "img" src="{{this.User.avatar}}"> {{this.User.name}}</p> 
         <a href="/tasks/{{this.id}}/delete">❌</a>
         <a href="/tasks/{{this.id}}/edit">Edit</a> 
      </div>
    {{/each}}
</div>


</div>
</div>
<script src="/script.js" defer></script>
